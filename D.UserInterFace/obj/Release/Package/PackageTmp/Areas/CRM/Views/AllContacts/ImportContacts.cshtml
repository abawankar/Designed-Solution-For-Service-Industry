@{
    ViewBag.Message = "Import Contacts - Draft";
}



 <div class="filtering">
     @Html.ActionLink("Submit Data","ProcessImport","AllContacts") | 
 </div>


 <div id="contactTable"></div>

<script type="text/javascript">

    //---- Contact Table ------
    $(document).ready(function () {
        
        $('#contactTable').jtable({
            title: 'Contact List',
            paging: true,
            pagesize: 3,
            actions: {
                listAction: '@Url.Action("ImportContactList")',
            },
             fields: {
                 Id: {
                     title: 'Id',
                     width: '1%',
                     key: true,
                     create: false,
                     edit: false,
                     list: false
                 },
                 AccountName: {
                     title: 'Account Name',
                     width: '2%',
                 },
                 Salutation: {
                     title: 'Salutation',
                     width: '2%'
                 },
                 FirstName: {
                     title: 'FirstName',
                     width: '5%'
                 },
                 MiddleName: {
                     title: 'MiddleName',
                     width: '5%',
                     list: false
                 },
                 LastName: {
                     title: 'LastName',
                     width: '5%'
                 },
                 Title: {
                     title: 'Title',
                     width: '5%',
                     list: false
                 },
                 Phone: {
                     title: 'Phone',
                     width: '5%',
                     list: false
                 },
                 PhoneDirect: {
                     title: 'Phone Direct',
                     width: '5%'
                 },
                 Email: {
                     title: 'Email',
                     width: '5%'
                 },
                 EmailOpt: {
                     title: 'EmailOpt',
                     width: '2%',
                     type: 'checkbox',
                     values: { 'false': 'Yes', 'true': 'No' },
                     defaultValue: 'false',
                 },
                 Messanger: {
                     title: 'Messenger',
                     width: '5%'
                 },
                 Mobile: {
                     title: 'Mobile',
                     width: '5%'
                 },
                 Department: {
                     title: 'Department',
                     width: '5%',
                 },
                 Street: {
                     title: 'Street',
                     width: '5%',
                     type: 'textarea',
                 },
                 City: {
                     title: 'City',
                     width: '2%'
                 },
                 StateProvince: {
                     title: 'StateProvince',
                     width: '2%',
                                      },
                 Country: {
                     title: 'Country',
                     width: '2%',
                     display: function (e) {
                         return e.record.Country.Name;
                     }
                 },
                 ZipPostalCode: {
                     title: 'ZipPostalCode',
                     width: '2%',
                 },
                 CreationDate: {
                     title: 'Creation Date',
                     type: 'date',
                     width: '2%',
                     display: function (data) {
                         return moment(data.record.CreationDate).format('DD-MMM-YYYY')
                     },
                 },
                 Creater: {
                     title: 'Creator',
                     width: '5%',
                     display: function (d) {
                         return d.record.Creater.EmpName;
                     }
                 },
                
             },
            
            
         });
        $('#contactTable').jtable('load');
     
    });

    // -------- End Mail Template

</script>
