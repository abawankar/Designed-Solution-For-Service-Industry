
@{
    ViewBag.Title = "Create Role";
}

<div class="panel panel-info topmar-10">
    <div class="panel-heading">
        @Html.ActionLink("Dashboard", "Index", "Home") | 
        @Html.ActionLink("List Roles", "Index") |
        @Html.ActionLink("Manage User Role", "ManageUserRoles") |
        @Html.ActionLink("Users", "UserList", "Role")
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <table class="table-condensed">
                <tr>
                    <td>Role Name: </td>
                    <td>@Html.TextBox("RoleName", null, new { @class = "search-box" })</td>
                    <td>
                        <button type="submit" value="Save" class="btn btn-success btn-sm" aria-label="Left Align">
                        <span class="fa fa-save" aria-hidden="true"></span> Save
                        </button>
                    </td>
                </tr>
            </table>
        }
    </div>
</div>

