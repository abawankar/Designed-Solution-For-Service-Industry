@{
    ViewBag.Title = "CRM-Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .panel-sm {
        padding: 1px 15px;
    }

    .panel-top {
        margin-left: 40px;
    }

    .panel-bot {
        margin-top: 5px;
    }

    .dark-col {
        background-color: #d9edf7;
        border-color: #bce8f1;
    }

    .navbar {
        margin-bottom: 5px;
    }
</style>

<script type="text/javascript">
    function toggler(divId) {
        $("#" + divId).toggle();
    }
</script>

<div class="row topmar-10">
    <div class="panel panel-info col-sm-2 col-md-2 dark-col ">
        <div class="panel-heading"><span class="fa fa-chain fa-2x"> CRM</span></div>
        <ul class="nav nav-sidebar">
            <li class="active">
                <a href="#master" class="toggle">
                    <span class="fa fa-table"></span><strong> MASTER</strong>
                </a>
            </li>
        </ul>
        <div id="master" class="hidden">
            <ul class="nav nav-sidebar">
                <li>@Html.ActionLink("Account Category", "Index", "Industry")</li>
                <li>@Html.ActionLink("Account Type", "Index", "AccountType")</li>
                <li>@Html.ActionLink("Lead Source", "Index", "LeadSource")</li>
            </ul>
        </div>

        <ul class="nav nav-sidebar">
            <li class="active">
                <a href="#trn" class="toggle">
                    <span class="fa fa-gear"></span><strong> TRANSACTION</strong>
                </a>
            </li>
        </ul>
        <div id="trn">
            <ul class="nav nav-sidebar">
                <li>@Html.ActionLink("Account", "Index", "NewAccount")</li>
                <li>@Html.ActionLink("Contacts", "Index", "AllContacts")</li>
                <li>@Html.ActionLink("Leads", "Index", "PotentialAccount")</li>
                <li>@Html.ActionLink("Template", "Index", "IndexTemplate")</li>
                <li>@Html.ActionLink("Contact Group", "Index", "ContactGroup")</li>
                <li>@Html.ActionLink("Mass Email", "Index", "MassEmailing")</li>
                <li>@Html.ActionLink("Stay In Touch", "ContactList", "OneStayInTouch")</li>
                @*<li>@Html.ActionLink("Top Producer", "Index", "TopProducer")</li>
                <li>@Html.ActionLink("Least Producer", "Index", "LeastProducer")</li>*@
            </ul>
        </div>

        <ul class="nav nav-sidebar">
            <li class="active">
                <a href="#rpt" class="toggle">
                    <span class="fa fa-bar-chart"></span><strong> REPORT</strong>
                </a>
            </li>
        </ul>
        <div id="rpt" class="hidden">
            <ul class="nav nav-sidebar">
                <li>@Html.ActionLink("Top Producer", "Index", "TopProducer")</li>
                <li>@Html.ActionLink("Least Producer", "Index", "LeastProducer")</li>
            </ul>
        </div>

    </div>

    <div class="col-sm-10">
        <div class="panel panel-info">
            <div class="panel-heading"><strong><span class="fa fa-dashboard fa-2x"></span> CRM DASHBOARD</strong></div>
            <div class="panel-body">
               
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

    $(document).ready(function () {
        $(function () {
            $('.toggle').click(function (event) {
                event.preventDefault();
                var target = $(this).attr('href');
                $(target).toggleClass('hidden show');
            });
        });
    });
</script>

