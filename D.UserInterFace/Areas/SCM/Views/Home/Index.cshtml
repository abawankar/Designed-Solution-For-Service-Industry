
@{
    ViewBag.Title = "SCM-Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .panel-sm {
        padding: 1px 15px;
    }

    .panel-top {
        margin-left: 40px;
    }

    .panel-bot {
        margin-top: 5px;
    }

    .dark-col {
        background-color: #d9edf7;
        border-color: #bce8f1;
    }

    .navbar {
        margin-bottom: 5px;
    }
</style>

<script type="text/javascript">
    function toggler(divId) {
        $("#" + divId).toggle();
    }
</script>

<div class="row topmar-10">
    <div class="panel panel-info col-sm-2 dark-col ">
        <div class="panel-heading"><span class="fa fa-users fa-2x"> SCM</span></div>

        <ul class="nav nav-sidebar">
            <li class="active">
                <a href="#master" class="toggle">
                    <span class="fa fa-table"></span><strong> MASTER</strong>
                </a>
            </li>
        </ul>
        <div id="master">
            <ul class="nav nav-sidebar">
                <li>@Html.ActionLink("Client", "Index", "Client")</li>
                <li>@Html.ActionLink("Enquiry Source", "Index", "EnquirySource")</li>
                <li>@Html.ActionLink("Enquiry Status", "Index", "EnquiryStatus")</li>
                <li>@Html.ActionLink("Supplier", "Index", "Supplier")</li>
                <li>@Html.ActionLink("Supplier Category", "Index", "SupplierCategory")</li>
                <li>@Html.ActionLink("Business Nature", "Index", "BusinessNature")</li>
            </ul>
        </div>

        <ul class="nav nav-sidebar">
            <li class="active">
                <a href="#trn" class="toggle">
                    <span class="fa fa-gear"></span><strong> TRANSACTION</strong>
                </a>
            </li>
        </ul>
        <div id="trn">
            <ul class="nav nav-sidebar">
                <li>@Html.ActionLink("New Business Opportunity", "Index", "NBO")</li>
                <li>@Html.ActionLink("Budget", "Index", "Budget")</li>
            </ul>
        </div>

        <ul class="nav nav-sidebar">
            <li class="active">
                <a href="#rpt" class="toggle">
                    <span class="fa fa-bar-chart"></span><strong> REPORT</strong>
                </a>
            </li>
        </ul>
        <div id="rpt" class="hidden">
            <ul class="nav nav-sidebar">
                <li>@Html.ActionLink("Budget Performance Report", "BPRIndex", "Budget")</li>
                <li>@Html.ActionLink("Cash Flow Report", "Index", "CashFlow")</li>
                <li>@Html.ActionLink("Confirm Calender", "ConfirmCalenderIndex", "NBO")</li>
                <li>@Html.ActionLink("Active Calender", "ActiveCalenderIndex", "NBO")</li>
                <li>@Html.ActionLink("Staff Activity", "StaffActivity", "NBO")</li>
                <li>@Html.ActionLink("Client Analysis", "ClientAnalysisIndex", "NBO")</li>
                <li>@Html.ActionLink("Market Analysis", "MarketAnalysisIndex", "NBO")</li>
                <li>@Html.ActionLink("Representation Analysis", "RepresentationAnalysisIndex", "NBO")</li>
                <li>@Html.ActionLink("Job Profitability Report", "Index", "JobProfitability")</li>
            </ul>
        </div>

        
    </div>

    <div class="col-sm-10">
        <div class="panel panel-info">
            <div class="panel-heading"><strong><span class="fa fa-dashboard fa-2x"></span> SCM DASHBOARD</strong></div>
            <div class="panel-body">
                
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

    $(document).ready(function () {
        $(function () {
            $('.toggle').click(function (event) {
                event.preventDefault();
                var target = $(this).attr('href');
                $(target).toggleClass('hidden show');
            });
        });
    });
</script>