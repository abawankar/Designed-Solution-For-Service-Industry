@{
    ViewBag.Title = "ATM-Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    function toggler(divId) {
        $("#" + divId).toggle();
    }
</script>

<div class="row topmar-10">
    <div class="panel panel-info col-sm-2 col-md-2 dark-col">
        <div class="panel-heading"><span class="fa fa-clock-o fa-2x"> ATM</span></div>
        <ul class="nav nav-sidebar">
            <li class="active">
                <a href="#master" class="toggle">
                    <span class="fa fa-table"></span><strong> MASTER</strong>
                </a>
            </li>
        </ul>
        <div id="master">
            <ul class="nav nav-sidebar">
                <li>@Html.ActionLink("Location", "Index", "Location")</li>
            </ul>
        </div>

        <ul class="nav nav-sidebar">
            <li class="active">
                <a href="#trn" class="toggle">
                    <span class="fa fa-gear"></span><strong> TRANSACTION</strong>
                </a>
            </li>
        </ul>
        <div id="trn">
            <ul class="nav nav-sidebar">
                <li>@Html.ActionLink("New Activity", "Index", "TaskManager")</li>
                <li>@Html.ActionLink("Past Activity", "PendingTask", "TaskManager")</li>
            </ul>
        </div>

        <ul class="nav nav-sidebar">
            <li class="active">
                <a href="#rpt" class="toggle">
                    <span class="fa fa-bar-chart"></span><strong> REPORT</strong>
                </a>
            </li>
        </ul>
        <div id="rpt">
            <ul class="nav nav-sidebar">
                <li>@Html.ActionLink("Time & Cost Report", "Index", "ATMReport")</li>
            </ul>
        </div>

    </div>

    <div class="col-sm-10">
        <div class="panel panel-info">
            <div class="panel-heading"><strong><span class="fa fa-dashboard fa-2x"></span> ATM DASHBOARD</strong></div>
            <div class="panel-body nopadding">
               @{Html.RenderAction("TodayTask", "TaskManager");}
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

    $(document).ready(function () {
        $(function () {
            $('.toggle').click(function (event) {
                event.preventDefault();
                var target = $(this).attr('href');
                $(target).toggleClass('hidden show');
            });
        });
    });
</script>

